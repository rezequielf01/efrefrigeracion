---
const { imgSrc } = Astro.props
---

<div class="card">
    <div class="card-img">
        <img class="card-img__img" src={imgSrc} />
    </div>
    <div class="card-description w-full flex flex-col items-center">
        <slot />
    </div>
</div>

<style>
    .card{
        width: 300px;
        height: 350px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }
    .card-img{
        width: 50%;
        height: 40%;
    }
    .card-img__img{
        width: 100%;
        height: 100%;
        border-radius: 50%;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
    }
    .card-description{
        padding: 10px;
    }

    @media (max-width: 1025px) { 
        .card{
            width: 200px;
            height: 300px;
        }
    }
    @media (max-width: 769px) { 
        .card{
            width: 100px;
            height: 200px;
        }
        .card-img{
            width: 60%;
            height: 65%;
        }
        .card-description{
            height: 35%;
        }
    }
    @media (max-width: 426px) { 
        .card{
            margin-top: 30px;
        }
        .card-img{
            width: 55%;
            height: 60%;
        }
    }
    @media (max-width: 321px) { 
        .card-img{
            width: 45%;
        }
        .card{
            margin-top: 35px;
        }
    }
</style>